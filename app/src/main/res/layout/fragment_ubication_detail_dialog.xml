<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Toolbar
            android:id="@+id/toolbarUbication"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.appbar.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:contentDescription="Deep Learning presentation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/aiLogoHeight"
                android:src="@drawable/deep_learning_presentation"
                android:scaleType="centerCrop"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/cardCornerRadius"
                android:elevation="@dimen/cardElevation"
                android:layout_margin="@dimen/cardMargin">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/shape_paragraph">
                    <TextView
                        android:id="@+id/tvUbicationDetailPlace"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="AIcon Place"
                        android:textSize="@dimen/titleSize"
                        android:textColor="?attr/colorOnPrimary"
                        android:gravity="center_horizontal"
                        android:layout_margin="@dimen/titleMargin"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?attr/colorSecondaryVariant"/>

                    <TextView
                        android:padding="20dp"
                        android:id="@+id/tvUbicationDetailAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:textSize="@dimen/homeSubtitleSize"
                        android:textColor="?attr/colorPrimary"
                        android:gravity="start"
                        android:drawablePadding="@dimen/cardMargin"
                        app:drawableStartCompat="@drawable/ic_pin"/>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?attr/colorSecondaryVariant"/>

                    <TextView
                        android:id="@+id/tvUbicationDetailPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Phone"
                        android:textSize="@dimen/homeSubtitleSize"
                        android:textColor="?attr/colorPrimary"
                        android:gravity="start"
                        android:padding="20dp"
                        android:drawablePadding="@dimen/cardMargin"
                        app:drawableStartCompat="@drawable/ic_phone"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?attr/colorSecondaryVariant"/>

                    <TextView
                        android:id="@+id/tvUbicationDetailWebsite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Website"
                        android:textSize="@dimen/homeSubtitleSize"
                        android:textColor="?attr/colorPrimary"
                        android:gravity="start"
                        android:padding="20dp"
                        android:drawablePadding="@dimen/cardMargin"
                        app:drawableStartCompat="@drawable/ic_link"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>