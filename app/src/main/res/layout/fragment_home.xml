<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.ui.fragments.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/cardCornerRadius"
                app:cardElevation="@dimen/cardElevation"
                android:layout_margin="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/shape_paragraph">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/homeImageViewHeight"
                        android:src="@drawable/aicon_logo_horizontal"
                        android:layout_marginEnd="30dp"
                        android:layout_marginStart="30dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorPrimary"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="@dimen/titleSize"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_marginRight="@dimen/homeSubtitleMargin"
                        android:layout_marginLeft="@dimen/homeSubtitleMargin"
                        android:layout_marginTop="@dimen/homeSubtitleMargin"
                        android:text="@string/home_frag_tv_what_is"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorPrimary"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/homeSubtitleSize"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginRight="@dimen/homeSubtitleMargin"
                        android:layout_marginLeft="@dimen/homeSubtitleMargin"
                        android:layout_marginTop="@dimen/homeSubtitleMargin"
                        android:layout_marginBottom="@dimen/homeSubtitleMargin"
                        android:text="@string/home_frag_tv_what_is_resp"/>


                </LinearLayout>

            </androidx.cardview.widget.CardView>




            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/cardCornerRadius"
                app:cardElevation="@dimen/cardElevation"
                android:layout_margin="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/shape_paragraph">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/homeImageViewHeight"
                        android:src="@drawable/deep_learning_presentation"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorPrimary"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="@dimen/titleSize"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_marginRight="@dimen/homeSubtitleMargin"
                        android:layout_marginLeft="@dimen/homeSubtitleMargin"
                        android:layout_marginTop="@dimen/homeSubtitleMargin"
                        android:text="@string/home_frag_tv_why"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorPrimary"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/homeSubtitleSize"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginRight="@dimen/homeSubtitleMargin"
                        android:layout_marginLeft="@dimen/homeSubtitleMargin"
                        android:layout_marginTop="@dimen/homeSubtitleMargin"
                        android:layout_marginBottom="@dimen/homeSubtitleMargin"
                        android:text="@string/home_frag_tv_why_resp"/>


                </LinearLayout>

            </androidx.cardview.widget.CardView>






            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/cardCornerRadius"
                app:cardElevation="@dimen/cardElevation"
                android:layout_margin="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/shape_paragraph">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/homeImageViewHeight"
                        android:src="@drawable/ai_branches_banner"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorPrimary"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="@dimen/titleSize"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_marginRight="@dimen/homeSubtitleMargin"
                        android:layout_marginLeft="@dimen/homeSubtitleMargin"
                        android:layout_marginTop="@dimen/homeSubtitleMargin"
                        android:text="@string/home_frag_tv_info"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorPrimary"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/homeSubtitleSize"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginRight="@dimen/homeSubtitleMargin"
                        android:layout_marginLeft="@dimen/homeSubtitleMargin"
                        android:layout_marginTop="@dimen/homeSubtitleMargin"
                        android:layout_marginBottom="@dimen/homeSubtitleMargin"
                        android:text="@string/home_frag_tv_info_resp"/>


                </LinearLayout>

            </androidx.cardview.widget.CardView>




        </LinearLayout>

    </ScrollView>

</FrameLayout>